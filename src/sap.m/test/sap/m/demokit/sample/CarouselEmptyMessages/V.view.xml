<mvc:View
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="sap.m.sample.CarouselEmptyMessages.C"
	height="100%">
	<HBox justifyContent="Center" renderType="Bare" height="100%">
		<Panel width="75%" height="100%">
			<Slider
					value="100"
					liveChange=".onResizeCarouselContainer" />
			<Title id="carouselTitle"
				   text="Image Gallery"></Title>
			<Carousel class="sapUiContentPadding"
					  id="carouselEmpty"
					  ariaLabelledBy="carouselTitle"
					  height="50%">
			</Carousel>
		</Panel>
	</HBox>

</mvc:View>
